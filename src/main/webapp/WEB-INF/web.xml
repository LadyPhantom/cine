<!DOCTYPE web-app PUBLIC
        "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
        "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>

    <display-name>Archetype Created Web Application</display-name>

    <!-- Init parameters -->
    <!--<context-param>-->
        <!--<param-name>url</param-name>-->
        <!--<param-value>dd</param-value>-->
    <!--</context-param>-->

    <servlet>
        <servlet-name>affiche</servlet-name>
        <servlet-class>fr.laerce.cinema.Affiche</servlet-class>
        <init-param>
            <param-name>url</param-name>
            <param-value>C:/Users/Public/Documents/affiches/</param-value>
        </init-param>
    </servlet>
    <servlet>
        <servlet-name>liste</servlet-name>
        <servlet-class>fr.laerce.cinema.Liste</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>detail</servlet-name>
        <servlet-class>fr.laerce.cinema.Detail</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>recherche</servlet-name>
        <servlet-class>fr.laerce.cinema.RechercheFilmByNom</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>historique</servlet-name>
        <servlet-class>fr.laerce.cinema.Historique</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>affiche</servlet-name>
        <url-pattern>/affiche</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>liste</servlet-name>
        <url-pattern>/liste</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>detail</servlet-name>
        <url-pattern>/detail</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>recherche</servlet-name>
        <url-pattern>/recherche</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>historique</servlet-name>
        <url-pattern>/historique</url-pattern>
    </servlet-mapping>

</web-app>

